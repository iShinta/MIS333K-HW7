@model Ho_MinhTri_HW7.Models.Committee

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Committee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CommitteeName)
        </dt>

        <dd>
